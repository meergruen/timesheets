<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meergruen.time_sheets">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:allowBackup="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.meergruen.time_sheets.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustNothing|stateHidden"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.meergruen.time_sheets.OverviewActivity"
            android:label="Overview"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.meergruen.time_sheets.TimeSheetsActivity"
            android:label="Time Sheets"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>